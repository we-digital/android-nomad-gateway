<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ForwardingRuleEditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Edit Forwarding Rule"
            app:titleTextColor="?attr/colorOnSurface" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="120dp">

            <!-- Basic Configuration Section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Basic Configuration"
                        android:textAppearance="@style/TextAppearance.App.TitleMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="@dimen/spacing_medium" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:hint="Sender (phone number or text)"
                        app:helperText="Use * for any sender, or specific number/text"
                        app:helperTextEnabled="true"
                        app:startIconDrawable="@drawable/ic_edit">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_sender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:hint="Webhook URL"
                        app:startIconDrawable="@drawable/ic_link">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_url"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:hint="Number of Retries">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_retries"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="3" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- JSON Template Section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="JSON Template Configuration"
                        android:textAppearance="@style/TextAppearance.App.TitleMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Configure your JSON payload structure. Use template variables in values:"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <!-- Template Variables Info -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        app:cardBackgroundColor="?attr/colorPrimaryContainer"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_small">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Available Template Variables:"
                                android:textAppearance="@style/TextAppearance.App.LabelLarge"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/spacing_tiny" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="• %from% - Sender phone number\n• %text% - SMS message content\n• %sentStamp% - Message timestamp\n• %receivedStamp% - Received timestamp\n• %sim% - SIM card identifier"
                                android:textAppearance="@style/TextAppearance.App.BodyMedium"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:typeface="monospace"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Template Fields -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- From Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_small">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/spacing_small"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:hint="Field name">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_template_from_key"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:text="from" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:layout_marginStart="@dimen/spacing_small"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:hint="Field value (use %from%)">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_template_from_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:text="%from%" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Text Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_small">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/spacing_small"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:hint="Field name">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_template_text_key"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:text="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:layout_marginStart="@dimen/spacing_small"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:hint="Field value (use %text%)">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_template_text_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:text="%text%" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Timestamp Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_small">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/spacing_small"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:hint="Field name">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_template_timestamp_key"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:text="sentStamp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:layout_marginStart="@dimen/spacing_small"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:hint="Field value (use %sentStamp%)">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_template_timestamp_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:text="%sentStamp%" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- SIM Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_small">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/spacing_small"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:hint="Field name">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_template_sim_key"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:text="sim" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:layout_marginStart="@dimen/spacing_small"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:hint="Field value (use %sim%)">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_template_sim_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:text="%sim%" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Add Custom Field Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_template_field"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Add Custom Field"
                            app:icon="@drawable/ic_add"
                            android:textColor="?attr/colorPrimary" />

                        <!-- Custom Template Fields Container -->
                        <LinearLayout
                            android:id="@+id/custom_template_fields_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/spacing_small" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Headers Section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_medium">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="HTTP Headers"
                            android:textAppearance="@style/TextAppearance.App.TitleMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_header"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Header"
                            app:icon="@drawable/ic_add"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/headers_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Advanced Options Section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Advanced Options"
                        android:textAppearance="@style/TextAppearance.App.TitleMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="@dimen/spacing_medium" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_ignore_ssl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ignore SSL Certificate Errors"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:paddingVertical="@dimen/spacing_small"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_chunked_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use Chunked Transfer Encoding"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:paddingVertical="@dimen/spacing_small" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium"
        android:background="?attr/colorSurface"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_test"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_small"
            android:text="Test"
            app:icon="@drawable/ic_settings"
            android:textColor="?attr/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="Save"
            app:icon="@drawable/ic_check_circle" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 